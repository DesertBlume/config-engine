options {
    directory "/var/named";
    listen-on { 127.0.0.1; {{ bind_slave_ip }}; };
    listen-on-v6 { none; };
    allow-query { any; };
    recursion yes;
    dnssec-validation yes;
    auth-nxdomain no;
    pid-file "/var/run/named/named.pid";
};

zone "blue.lab" IN {
    type slave;
    masters { {{ bind_master_ip }}; };
    file "slaves/fwd.blue.lab";
};

zone "30.16.172.in-addr.arpa" IN {
    type slave;
    masters { {{ bind_master_ip }}; };
    file "slaves/rev.172.16.30";
};

zone "32.16.172.in-addr.arpa" IN {
    type slave;
    masters { {{ bind_master_ip }}; };
    file "slaves/rev.172.16.32";
};


options {
    directory "/var/named";
    listen-on { 127.0.0.1; {{ client_ip }}; };
    listen-on-v6 { none; };
    allow-query { any; };
    recursion yes;
    dnssec-validation yes;
    auth-nxdomain no;
    pid-file "/var/run/named/named.pid";
};

zone "{{ bind_domain }}" IN {
    type slave;
    masters { {{ primary_server_ip }}; };
    file "slaves/fwd.{{ bind_domain }}";
};

zone "16.172.in-addr.arpa" IN {
    type slave;
    masters { {{ primary_server_ip }}; };
    file "slaves/rev.16.172";
};
